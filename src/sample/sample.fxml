      <RowConstraints />
   </rowConstraints>
   <children>
      <BorderPane prefHeight="392.0" prefWidth="641.0">
         <center>
            <Canvas fx:id="canvas" height="379.0" width="617.0" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#zapusk" text="Запустить" />
